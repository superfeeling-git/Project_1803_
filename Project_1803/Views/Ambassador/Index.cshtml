@model PagedList.StaticPagedList<PhotoModel>
@using PagedList
@using PagedList.Mvc
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>中国中医药研究促进会慢性病专项基金管理委员会-首页</title>
    @Styles.Render("~/Content/style")
    @Scripts.Render("~/bundles/home")
    <script type="text/javascript">
        $(function () {
            $("div.nav ul li:last").css("border", "none");
            $("ul.ambassador li:nth-child(5n)").css("margin", "0");
        });
    </script>
</head>

<body>
    @Html.Partial("Top")
    @Html.Action("SubNav", "Common")
    <ul class="ambassador clearfix">
        @foreach (var item in Model)
        {
            <li>
                <div><a href="@Url.Action("View",new { id = item.PhotoID })"><img src="@item.PhotoImg" /></a></div>
                <h1><a href="@Url.Action("View",new { id = item.PhotoID })">@item.PhotoName</a></h1>
            </li>
        }
    </ul>
    <div style="width:1000px; margin-left:auto; margin-right:auto;">
        @Html.PagedListPager(Model, m => Url.Action("Index", new { PageIndex = m }))
    </div>
    @Html.Partial("Foot")
</body>
</html>
