@model NewsModel
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>中国中医药研究促进会慢性病专项基金管理委员会-首页</title>
    @Styles.Render("~/Content/style")
    @Scripts.Render("~/bundles/home")
    <script type="text/javascript">
        $(function () {
            $("div.nav ul li:last").css("border", "none");
            $("ul.projectlist li:nth-child(2n)").css("margin", "0");
        });
    </script>
</head>

<body>
    @Html.Partial("Top")
    @Html.Action("SubNav", "Common")
    <div class="pagebody clearfix">
        <div class="left">
            <h1 class="newstitle">@Model.Title</h1>
            <div class="newsatt"><span>
                来源：@Model.Source</span><span>
                作者：@Model.Author</span><span>
                时间：@Model.AddTime.ToString("yyyy-MM-dd")
                    点击量：@Model.Hit
           </span></div>
            <div class="newscontent">
                @Html.Raw(Model.Content)
            </div>
        </div>
        @Html.Action("Index", "Common")
    </div>
    @Html.Partial("Foot")
</body>
</html>
